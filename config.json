{
  "reports": [
    {
      "targets": [
        {
          "name": "slack",
          "inputs": {
            "title": "RKStudio Cypress report",
            "url": "$secrets.SLACK_WEBHOOK",
            "publish": "failure-details"
          },
          "extensions": [
            {
              "name": "hyperlinks",
              "inputs": {
                "links": [
                  {
                    "text": "Logs",
                    "url": "$secrets.SLACK_WEBHOOK"
                  }
                ]
              }
            }
          ]
        }
      ],
      "results": [
        {
          "type": "junit",
          "files": [
            "./reports/junit.*.xml"
          ]
        }
      ]
    }
  ]
}
